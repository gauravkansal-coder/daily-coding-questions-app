# Normalize line endings for all files
* text=auto

# Dart files
*.dart text eol=lf

# JSON files
*.json text eol=lf

# Configuration files
*.gradle text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Kotlin
*.kt text eol=lf
*.kts text eol=lf

# Swift
*.swift text eol=lf
*.h text eol=lf

# C/C++
*.cc text eol=lf
*.cpp text eol=lf
*.cmake text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.lock binary
